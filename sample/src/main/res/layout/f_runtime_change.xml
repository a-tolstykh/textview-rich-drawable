<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.tolstykh.textviewrichdrawable.TextViewRichDrawable
        android:id="@+id/tv_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_stroke_black"
        android:padding="32dp"
        android:text="@string/click_below_button_change_drawable"
        app:compoundDrawableHeight="30dp"
        app:compoundDrawableWidth="30dp" />


    <Button
        android:id="@+id/set_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="set top" />

    <Button
        android:id="@+id/set_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="set bottom" />

    <Button
        android:id="@+id/set_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="set left" />

    <Button
        android:id="@+id/set_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="set right" />

</LinearLayout>